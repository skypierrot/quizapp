# Database
DATABASE_URL=postgresql://postgres:password@quizapp-db:5432/quizapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=quizapp

# Docker 개발 환경 최적화 설정
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# React Refresh 안정화 설정
FAST_REFRESH=true
REACT_REFRESH_OVERLAY=false

# Turbopack 사용 설정
TURBOPACK=true

# Docker 환경에서 안정적인 파일 감시
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true
NEXT_WEBPACK_USEPOLLING=true

# Webpack HMR 안정성을 위한 추가 설정
WATCHPACK_AGGREGATE_TIMEOUT=500
NEXT_WEBPACK_IGNORED_WATCH_PATTERNS=node_modules,.git,.next,.env*
NEXT_WEBPACK_OPTIMIZATION=true

# 개발 서버 설정
HOSTNAME=0.0.0.0
PORT=3000

# 디버깅 설정
DEBUG=*
NODE_OPTIONS="--max-old-space-size=4096"

# NextAuth 설정
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-secret-key-change-in-production
